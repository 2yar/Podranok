<p id="notice"><%= notice %></p>

<h1>Таблица продуктов</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Вес</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
        <td><%= link_to 'Показать', product %></td>
        <td><%= link_to 'Изменить ', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= image_tag  product.image.url(:medium) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новый продукт', new_product_path %> 
<p></p>
<% if current_user.nil? %>
  <%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %>
<% else %>
  <%= link_to products_path, class: 'login-button' do %>Go to App<% end %>
<% end %>
