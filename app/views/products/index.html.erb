<p id="notice"><%= notice %></p>

<h1>Таблица продуктов</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Имя</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Вес</th>
      <th>Каталог</th>
      <th>Категория</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag  product.image.url(:medium) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
        <td>
          <% if product.category.present? %>
            <%= link_to product.category.name, product.category %>
          <% end %>
        </td>
         <td>
          <% if product.category.parent.present? %>
            <%= link_to product.category.parent.name, product.category.parent %>
          <% end %>
        </td>
        <td><%= link_to 'Показать', product %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Изменить ', edit_product_path(product) %></td>
          <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Создать новый продукт', new_product_path %> 
<% end %>
