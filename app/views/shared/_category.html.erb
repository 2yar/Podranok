<%  Category.roots.each do |category| %>
  <div class="col-lg-3">
    <nav id="category"> 
      <%= link_to category.name,  category, class: "nav-link #{'active' if current_page?(category_path(category))}" %></p>
      <%= link_to image_tag category.image.url(:medium), class: "nav-link #{'active' if current_page?(category_path(category))}" %></p>
    </nav>
  </div>
<% end %>
