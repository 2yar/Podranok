<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'ФИО получателя' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'Город доставки' %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label 'Адрес электронной почты' %>
    <%= f.email_field  :email %>
  </div>

  <div class="field">
    <%= f.label 'Мобильный телефон' %>
    <%= f.telephone_field  :phone %>
  </div>

  <div class="field">
    <%= f.label 'Выберите способ доставки' %>
    <%= f.select :type_of_delivery, Order::TYPE_OF_DELIVERY,
        prompt: 'Способ доставки' %>
  </div>

  <div class="field">
    <%= f.label 'Выберите способ оплаты' %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
        prompt: 'Способ оплаты' %>
  </div>

  <div class="actions">
    <%= f.submit 'Подтвердить заказ' %>
  </div>
<% end %>
